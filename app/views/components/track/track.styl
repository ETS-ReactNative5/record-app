.track
  display flex
  border 1px solid $borderColor
  padding 0
  overflow hidden
  color black
  align-items center
  + .track
    margin-top -1px
  &.card
    flex 1 1 100px
    flex-direction vertical
  .track__play
    flex 0 0 4%
    position relative
    height 100%
    button
      position absolute
      width 100%
      height 100%
      background rgba(0,0,0,.5) !important
      display none
      border-radius 0
      .icon
        fill white
        height 100%
        width 100%
  .track__tags
    flex 0 0 25%
    input:not(:focus)
      opacity 0
  &:hover
    background #fbfbfb
    .track__play button
      display block
    .track__tags input
      opacity 1
  .track__actions
    flex 0 0 4%
    button
      border none
      &.button__star-solid
        fill $accentColor
  .track__body
    flex 1 0 35%
    min-width 0px
  .track__title
    overflow hidden
    text-overflow ellipsis
    white-space nowrap
    line-height 20px
  .track__artist
    overflow hidden
    white-space nowrap
    text-overflow ellipsis
    flex 1 0 15%
  .track__duration
  .track__bitrate
  .track__format
    flex 0 0 45px
  img
    padding 5px
    width 100%
    height 100%
    background $borderColor

  .track__duration
  .track__bitrate
  .track__format
  .track__body
  .track__artist
  .track__tags
    padding 0 4px

  .track__format
    text-overflow ellipsis
    overflow hidden

  .track__index
    flex 0 0 40px
    font-size 8px
    padding 0 2px
    font-family "SFMono-Regular", Consolas, "Liberation Mono", Menlo, Courier, monospace

  &.selected
    background-color rgba($accentColorRGB, 0.07)
    .track__play button
      display block

.track:not(.list__header)
  .track__play
    min-height 45px

.track__title:before
  content ' '
  display inline-block
  border-radius 99em
  width 4px
  height 4px
  margin-right 8px
  margin-left 3px
  vertical-align middle
  background-color rgba(0,0,0,0.2)

.track__available:before
  background-color $successColor
